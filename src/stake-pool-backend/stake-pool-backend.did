type Subaccount = blob;

type Deposit = record {
  amount: nat64;
  timestamp: nat64;
  lock_period_days: nat16;
};

type DepositError = variant {
  InvalidLockPeriod;
};

service : {
  deposit_funds: (Subaccount, nat16, nat64) -> (variant { ok : null; err : DepositError });
  get_deposits_by_user: () -> (vec record { Subaccount; Deposit }) query;
};
